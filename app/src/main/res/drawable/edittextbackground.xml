<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#F2F2F2" /> <!-- Light gray/white background -->
                <corners android:radius="12dp" />
                <stroke
                    android:width="1dp"
                    android:color="#DADADA" /> <!-- Slight border -->
                <padding
                    android:left="16dp"
                    android:top="10dp"
                    android:right="16dp"
                    android:bottom="10dp" />
            </shape>
        </item>
    </selector>
